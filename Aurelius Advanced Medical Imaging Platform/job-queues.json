{
  "dashboard": {
    "title": "Aurelius Job Queues & Workers",
    "tags": ["aurelius", "celery", "jobs", "workers"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Active Workers",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "celery_workers_total",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "unit": "short"
        }
      },
      {
        "id": 2,
        "title": "Queue Length",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "sum(celery_queue_length) by (queue_name)",
            "legendFormat": "{{queue_name}}",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "thresholds": {
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 100, "color": "yellow"},
              {"value": 500, "color": "red"}
            ]
          }
        }
      },
      {
        "id": 3,
        "title": "Tasks Running",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "celery_tasks_active_total",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "title": "Task Success Rate",
        "type": "gauge",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(celery_tasks_succeeded_total[5m])) / (sum(rate(celery_tasks_succeeded_total[5m])) + sum(rate(celery_tasks_failed_total[5m]))) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 90, "color": "yellow"},
                {"value": 95, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Task Throughput (tasks/s)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "sum(rate(celery_tasks_received_total[5m])) by (task_name)",
            "legendFormat": "Received: {{task_name}}",
            "refId": "A"
          },
          {
            "expr": "sum(rate(celery_tasks_succeeded_total[5m])) by (task_name)",
            "legendFormat": "Completed: {{task_name}}",
            "refId": "B"
          },
          {
            "expr": "sum(rate(celery_tasks_failed_total[5m])) by (task_name)",
            "legendFormat": "Failed: {{task_name}}",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Tasks/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "Task Duration by Type",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(celery_task_duration_seconds_bucket[5m])) by (le, task_name))",
            "legendFormat": "p95 {{task_name}}",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(celery_task_duration_seconds_bucket[5m])) by (le, task_name))",
            "legendFormat": "p99 {{task_name}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "Queue Length Over Time",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "celery_queue_length",
            "legendFormat": "{{queue_name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Queue Depth"},
          {"format": "short"}
        ],
        "alert": {
          "name": "High Queue Depth",
          "conditions": [
            {
              "evaluator": {"params": [1000], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "frequency": "1m",
          "handler": 1,
          "message": "Queue depth exceeded 1000 tasks",
          "noDataState": "no_data",
          "executionErrorState": "alerting"
        }
      },
      {
        "id": 8,
        "title": "Failed Tasks by Type",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "sum(increase(celery_tasks_failed_total[1h])) by (task_name)",
            "legendFormat": "{{task_name}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 9,
        "title": "Task Retry Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 12},
        "targets": [
          {
            "expr": "sum(rate(celery_tasks_retried_total[5m])) by (task_name)",
            "legendFormat": "{{task_name}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 10,
        "title": "Worker Memory Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "process_resident_memory_bytes{job=~\".*worker.*\"} / 1024 / 1024",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "mbytes", "label": "Memory (MB)"},
          {"format": "short"}
        ]
      },
      {
        "id": 11,
        "title": "Worker CPU Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total{job=~\".*worker.*\"}[5m]) * 100",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "CPU %"},
          {"format": "short"}
        ]
      },
      {
        "id": 12,
        "title": "Indexing Job Progress",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 28},
        "targets": [
          {
            "expr": "job_progress_percent{job_type=\"reindex\"}",
            "format": "table",
            "refId": "A"
          }
        ]
      },
      {
        "id": 13,
        "title": "ML Inference Queue",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 28},
        "targets": [
          {
            "expr": "celery_queue_length{queue_name=\"ml_inference\"}",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "thresholds": {
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 50, "color": "yellow"},
              {"value": 200, "color": "red"}
            ]
          }
        }
      },
      {
        "id": 14,
        "title": "Image Processing Queue",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 28},
        "targets": [
          {
            "expr": "celery_queue_length{queue_name=\"image_processing\"}",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "thresholds": {
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 100, "color": "yellow"},
              {"value": 500, "color": "red"}
            ]
          }
        }
      }
    ]
  }
}
