# Aurelius Medical Imaging Platform - Environment Configuration

# Application
APP_NAME=Aurelius Medical Imaging Platform
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# Database
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/aurelius
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=aurelius

# Redis
REDIS_URL=redis://:redis123@redis:6379/0
REDIS_PASSWORD=redis123

# Keycloak (Identity Management)
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=aurelius
KEYCLOAK_CLIENT_ID=gateway
KEYCLOAK_CLIENT_SECRET=gateway-secret
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# MinIO (Object Storage)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false

# Orthanc (DICOM Server)
ORTHANC_URL=http://localhost:8042
ORTHANC_USERNAME=orthanc
ORTHANC_PASSWORD=orthanc

# Microservices URLs
IMAGING_SVC_URL=http://localhost:8001
ML_SVC_URL=http://localhost:8002
SEARCH_SVC_URL=http://localhost:8004
FHIR_SVC_URL=http://localhost:8083/fhir

# OpenTelemetry (Observability)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=gateway
OTEL_TRACES_EXPORTER=otlp
OTEL_METRICS_EXPORTER=prometheus
OTEL_LOGS_EXPORTER=none

# Security
SECRET_KEY=your-secret-key-change-in-production-please
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Monitoring
ENABLE_METRICS=true
ENABLE_TRACING=true

# Stripe (Billing) - Optional
STRIPE_API_KEY=sk_test_your_stripe_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
