# Aurelius Frontend Environment Variables

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Authentication (NextAuth)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-change-in-production

# Keycloak
NEXT_PUBLIC_KEYCLOAK_URL=http://localhost:8080
NEXT_PUBLIC_KEYCLOAK_REALM=aurelius
NEXT_PUBLIC_KEYCLOAK_CLIENT_ID=frontend

# Feature Flags
NEXT_PUBLIC_ENABLE_DICOM_VIEWER=true
NEXT_PUBLIC_ENABLE_ML_INFERENCE=true
NEXT_PUBLIC_ENABLE_3D_RENDERING=true

# Analytics (Optional)
NEXT_PUBLIC_GA_ID=
