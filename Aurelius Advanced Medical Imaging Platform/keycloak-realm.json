{
  "realm": "aurelius",
  "enabled": true,
  "sslRequired": "none",
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,
  "permanentLockout": false,
  "maxFailureWaitSeconds": 900,
  "minimumQuickLoginWaitSeconds": 60,
  "waitIncrementSeconds": 60,
  "quickLoginCheckMilliSeconds": 1000,
  "maxDeltaTimeSeconds": 43200,
  "failureFactor": 5,
  "roles": {
    "realm": [
      {
        "name": "admin",
        "description": "Administrator with full access"
      },
      {
        "name": "clinician",
        "description": "Clinical user with patient data access"
      },
      {
        "name": "researcher",
        "description": "Research user with de-identified data access"
      },
      {
        "name": "radiologist",
        "description": "Radiologist with imaging interpretation access"
      },
      {
        "name": "pathologist",
        "description": "Pathologist with WSI access"
      },
      {
        "name": "student",
        "description": "Student with limited educational access"
      },
      {
        "name": "ml-engineer",
        "description": "ML engineer with model training access"
      }
    ]
  },
  "groups": [
    {
      "name": "Administrators",
      "path": "/Administrators",
      "realmRoles": ["admin"]
    },
    {
      "name": "Clinical Staff",
      "path": "/Clinical Staff",
      "realmRoles": ["clinician", "radiologist", "pathologist"]
    },
    {
      "name": "Research Team",
      "path": "/Research Team",
      "realmRoles": ["researcher", "ml-engineer"]
    },
    {
      "name": "Students",
      "path": "/Students",
      "realmRoles": ["student"]
    }
  ],
  "users": [
    {
      "username": "admin",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Admin",
      "lastName": "User",
      "email": "admin@aurelius.local",
      "credentials": [
        {
          "type": "password",
          "value": "admin123",
          "temporary": false
        }
      ],
      "realmRoles": ["admin"],
      "groups": ["/Administrators"]
    },
    {
      "username": "doctor",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Jane",
      "lastName": "Smith",
      "email": "doctor@aurelius.local",
      "credentials": [
        {
          "type": "password",
          "value": "doctor123",
          "temporary": false
        }
      ],
      "realmRoles": ["clinician", "radiologist"],
      "groups": ["/Clinical Staff"]
    },
    {
      "username": "researcher",
      "enabled": true,
      "emailVerified": true,
      "firstName": "John",
      "lastName": "Doe",
      "email": "researcher@aurelius.local",
      "credentials": [
        {
          "type": "password",
          "value": "research123",
          "temporary": false
        }
      ],
      "realmRoles": ["researcher", "ml-engineer"],
      "groups": ["/Research Team"]
    },
    {
      "username": "student",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Alice",
      "lastName": "Johnson",
      "email": "student@aurelius.local",
      "credentials": [
        {
          "type": "password",
          "value": "student123",
          "temporary": false
        }
      ],
      "realmRoles": ["student"],
      "groups": ["/Students"]
    }
  ],
  "clients": [
    {
      "clientId": "gateway",
      "name": "API Gateway",
      "description": "Backend API Gateway Service",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": false,
      "serviceAccountsEnabled": true,
      "authorizationServicesEnabled": true,
      "directAccessGrantsEnabled": true,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "secret": "gateway-secret",
      "redirectUris": [
        "http://localhost:8000/*",
        "http://gateway:8000/*"
      ],
      "webOrigins": [
        "http://localhost:8000",
        "http://gateway:8000"
      ],
      "attributes": {
        "access.token.lifespan": "1800",
        "client.session.idle.timeout": "3600",
        "client.session.max.lifespan": "36000"
      }
    },
    {
      "clientId": "frontend",
      "name": "Web Frontend",
      "description": "Next.js Frontend Application",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": true,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "redirectUris": [
        "http://localhost:3000/*",
        "http://localhost:3000/api/auth/callback/keycloak"
      ],
      "webOrigins": [
        "http://localhost:3000"
      ],
      "attributes": {
        "pkce.code.challenge.method": "S256"
      }
    },
    {
      "clientId": "imaging-svc",
      "name": "Imaging Service",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": false,
      "serviceAccountsEnabled": true,
      "secret": "imaging-secret",
      "attributes": {
        "access.token.lifespan": "1800"
      }
    },
    {
      "clientId": "ml-svc",
      "name": "ML Service",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": false,
      "serviceAccountsEnabled": true,
      "secret": "ml-secret",
      "attributes": {
        "access.token.lifespan": "1800"
      }
    }
  ],
  "clientScopes": [
    {
      "name": "roles",
      "description": "User roles",
      "protocol": "openid-connect",
      "attributes": {
        "include.in.token.scope": "true",
        "display.on.consent.screen": "false"
      },
      "protocolMappers": [
        {
          "name": "realm roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "consentRequired": false,
          "config": {
            "multivalued": "true",
            "user.attribute": "foo",
            "access.token.claim": "true",
            "claim.name": "realm_access.roles",
            "jsonType.label": "String"
          }
        }
      ]
    },
    {
      "name": "profile",
      "description": "OpenID Connect built-in scope: profile",
      "protocol": "openid-connect",
      "attributes": {
        "include.in.token.scope": "true",
        "display.on.consent.screen": "true",
        "consent.screen.text": "${profileScopeConsentText}"
      },
      "protocolMappers": [
        {
          "name": "full name",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-full-name-mapper",
          "consentRequired": false,
          "config": {
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true"
          }
        }
      ]
    }
  ],
  "defaultDefaultClientScopes": [
    "role_list",
    "profile",
    "email",
    "roles"
  ],
  "browserSecurityHeaders": {
    "contentSecurityPolicy": "frame-src 'self'; frame-ancestors 'self'; object-src 'none';",
    "xContentTypeOptions": "nosniff",
    "xRobotsTag": "none",
    "xFrameOptions": "SAMEORIGIN",
    "xXSSProtection": "1; mode=block",
    "strictTransportSecurity": "max-age=31536000; includeSubDomains"
  },
  "smtpServer": {},
  "eventsEnabled": true,
  "eventsListeners": ["jboss-logging"],
  "enabledEventTypes": [
    "LOGIN",
    "LOGIN_ERROR",
    "LOGOUT",
    "CODE_TO_TOKEN",
    "CLIENT_LOGIN",
    "REFRESH_TOKEN",
    "UPDATE_PASSWORD",
    "IMPERSONATE",
    "CLIENT_REGISTER",
    "CLIENT_UPDATE"
  ],
  "adminEventsEnabled": true,
  "adminEventsDetailsEnabled": true,
  "internationalizationEnabled": false,
  "supportedLocales": ["en"],
  "defaultLocale": "en",
  "authenticationFlows": [],
  "authenticatorConfig": [],
  "requiredActions": [],
  "browserFlow": "browser",
  "registrationFlow": "registration",
  "directGrantFlow": "direct grant",
  "resetCredentialsFlow": "reset credentials",
  "clientAuthenticationFlow": "clients",
  "dockerAuthenticationFlow": "docker auth"
}
